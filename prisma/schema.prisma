generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id        String        @id @db.VarChar(36) @default(uuid())
  name      String?       @db.VarChar(255)
  email     String        @db.VarChar(255) @unique
  password  String        @db.VarChar(100)
  createdAt DateTime      @map("created_at") @default(dbgenerated("CURRENT_TIMESTAMP")) @db.Timestamp(0)
  updatedAt DateTime?     @map("updated_at") @default(dbgenerated("NULL ON UPDATE CURRENT_TIMESTAMP")) @db.Timestamp(0)
  sessions  Session[]
  @@map("users")
}

model Session {
  id        String        @id @default(uuid())
  userId    String        @map("user_id") @db.VarChar(36)
  tokenHash String        @unique @map("token_hash")
  expiredAt DateTime      @map("expired_at") @db.Timestamp(0)
  createdAt DateTime      @map("created_at") @default(dbgenerated("CURRENT_TIMESTAMP")) @db.Timestamp(0)
  updatedAt DateTime?     @map("updated_at") @default(dbgenerated("NULL ON UPDATE CURRENT_TIMESTAMP")) @db.Timestamp(0)
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate:Cascade)
  @@index([userId])
  @@index([expiredAt])
  @@map("sessions")
}

model Category {
  id        String        @id @db.VarChar(36) @default(uuid())
  name      String        @db.VarChar(255)
  type      String        @db.VarChar(100)
  createdAt DateTime      @map("created_at") @default(dbgenerated("CURRENT_TIMESTAMP")) @db.Timestamp(0)
  updatedAt DateTime?     @map("updated_at") @default(dbgenerated("NULL ON UPDATE CURRENT_TIMESTAMP")) @db.Timestamp(0)
  products Product[]
  @@map("categories")
}

model Product {
  id        String        @id @db.VarChar(36) @default(uuid())
  code      String        @db.VarChar(30) @unique
  name      String        @db.VarChar(255)
  price     Decimal       @db.Decimal(20,2) @default(0)
  categoryId String       @map("category_id") @db.VarChar(36)

  category   Category @relation(fields: [categoryId],references: [id],onDelete: Restrict,onUpdate: Cascade)

  description       String?       @db.Text            
  createdAt         DateTime      @map("created_at") @default(dbgenerated("CURRENT_TIMESTAMP")) @db.Timestamp(0)
  updatedAt         DateTime?     @map("updated_at") @default(dbgenerated("NULL ON UPDATE CURRENT_TIMESTAMP")) @db.Timestamp(0)
  @@map("books")
}